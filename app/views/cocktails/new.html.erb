<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 mt-5">
      <h1>Create a new cocktail</h1>

      <%= simple_form_for(@cocktail, html: { class: "nice-class"}) do |f| %>
        <%= f.input :name, label: "Name", input_html: { class: "nice-class" } %>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>